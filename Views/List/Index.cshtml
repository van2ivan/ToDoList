@model IEnumerable<ListModel>;
@{
    ViewData["Title"] = "Task list";
}
<div class="container p-3">
    <div class="row p-2">
        <div class="col-6">
            <h2>ToDo List</h2>
        </div>  
        <div class="col-6 text-end">
            <a asp-controller="List" asp-action="Create">Add task</a>
        </div>
    </div>
</div>
<table class="table-bordered table-stripped" style="width: 100%; text-align: center">
    <thead>
        <tr style="font-weight: bold">
            <td>
                No.
            </td>
            <td>
                Task
            </td>
            <td>
                Description
            </td>

            <td>
            </td>
            <td>  
                
            </td>
            
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td width="5%">
                        @item.Id
                    </td>
                    <td width="25%">
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                <a asp-controller="List" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="List" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        
    </tbody>
</table>